<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        app:behavior_hideable="false"

        android:minHeight="100dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="0dp"

        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_start_date"
            android:text="Start Date"
            android:minWidth="100dp"
            android:layout_gravity="center_vertical"
            style="@style/TextViewTitle"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/edittext_start_date"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:inputType="number"


            android:textColorHint="@color/color_dbe9f6"
            android:textColor="@color/black"
            android:imeOptions="actionNext"
            android:textSize="14dp"
            android:background="@drawable/edit_text_black_border"
            android:layout_width="match_parent"

            android:hint="Please Enter Start Date here"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_2"
        app:layout_constraintTop_toBottomOf="@+id/layout_1"
        android:layout_width="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_end_Date"
            android:text="End Date"
            android:minWidth="100dp"
            android:layout_gravity="center_vertical"
            style="@style/TextViewTitle"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/edittext_end_date"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:inputType="number"
            android:textColorHint="@color/color_dbe9f6"
            android:textColor="@color/black"
            android:imeOptions="actionNext"
            android:textSize="14dp"
            android:background="@drawable/edit_text_black_border"
            android:layout_width="match_parent"
            android:hint="Please Enter End Date"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>


    <Button
        app:layout_constraintTop_toBottomOf="@+id/layout_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/button_search"
        android:layout_marginTop="25dp"
        android:layout_margin="15dp"
        android:textColor="@android:color/black"
        android:background="@drawable/button_bg_black"
       app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Search Transaction" />



</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>