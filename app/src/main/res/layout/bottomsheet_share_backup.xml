<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="150dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        app:behavior_hideable="false"
        android:minHeight="100dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <TextView
            android:id="@+id/textview_share_info"
            android:padding="15dp"
            android:textStyle="bold"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"></TextView>


        <Button
            android:id="@+id/button_share_info"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_ok"
            android:background="@drawable/button_bg_black"
            android:text="Share"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_share_info"
            android:layout_height="wrap_content"></Button>


            <Button
                android:id="@+id/button_ok"
                android:layout_width="0dp"
                android:text="Cancel"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_bg_black"
                app:layout_constraintStart_toEndOf="@+id/button_share_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_share_info"
                android:layout_height="wrap_content"></Button>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>