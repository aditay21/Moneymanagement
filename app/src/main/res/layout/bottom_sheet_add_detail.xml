<?xml version="1.0" encoding="utf-8"?>
<layout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    app:behavior_hideable="false"
    android:minHeight="400dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:behavior_hideable="false"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/selection_type"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_marginEnd="100dp"
            android:orientation="horizontal"
            android:background="@drawable/button_bg"
            android:layout_margin="30dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/text_view_expense"
                android:layout_width="0dp"
                android:text="Expense"
                style="@style/TextViewTitle"
                android:padding="10dp"
                android:background="@drawable/toggel_button_selector"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/text_view_income"
                style="@style/TextViewTitle"
                android:layout_width="0dp"
                android:background="@null"
              android:padding="10dp"
                android:text="Income"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_amount"
            app:layout_constraintTop_toBottomOf="@+id/selection_type"
            android:layout_width="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_amount_title"
                android:text="Amount"
                android:minWidth="100dp"
                android:layout_gravity="center_vertical"
                style="@style/TextViewTitle"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <EditText
                android:id="@+id/edittext_amount"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:inputType="number"
                android:maxLength="7"
                android:minWidth="100dp"
                android:textColorHint="@color/color_dbe9f6"
                android:textColor="@color/black"
                android:imeOptions="actionNext"
                android:textSize="14dp"
                android:background="@drawable/edit_text_black_border"
                android:layout_width="wrap_content"
                android:hint="Please Enter Amount here"
                android:layout_height="wrap_content"></EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_whom_to_pay"
            app:layout_constraintTop_toBottomOf="@+id/layout_amount"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_who_to_pay_title"
                android:text="Pay to"
                android:minWidth="100dp"
                android:layout_gravity="center_vertical"
                style="@style/TextViewTitle"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <EditText
                android:id="@+id/edittext_to_pay"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:minWidth="100dp"
                android:inputType="textCapWords"
                android:maxLength="10"
                android:textSize="14dp"
                android:hint="Amazon"
                android:textColorHint="@color/color_dbe9f6"
                android:textColor="@color/black"
                android:imeOptions="actionNext"
                android:background="@drawable/edit_text_black_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></EditText>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_date"
            app:layout_constraintTop_toBottomOf="@+id/layout_whom_to_pay"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_date_title"
                android:text="Date"
                android:minWidth="100dp"
                android:layout_gravity="center_vertical"
                style="@style/TextViewTitle"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/text_view_date"
                android:padding="10dp"
                android:minWidth="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_view_date_title"
                app:layout_constraintEnd_toStartOf="@+id/image_calender"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"></TextView>


            <ImageView
                app:layout_constraintTop_toTopOf="@+id/text_view_date"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_date"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/image_calender"
                android:layout_marginEnd="40dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_time"
            app:layout_constraintTop_toBottomOf="@+id/layout_date"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_time_title"
                android:text="Time"
                android:minWidth="100dp"
                android:layout_gravity="center_vertical"
                style="@style/TextViewTitle"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/text_view_time"
                android:padding="10dp"
                android:minWidth="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_view_time_title"
                app:layout_constraintEnd_toStartOf="@+id/image_calender_time"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"></TextView>


            <ImageView
                app:layout_constraintTop_toTopOf="@+id/text_view_time"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_time"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/image_calender_time"
                android:layout_marginEnd="40dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_paid_for"
            app:layout_constraintTop_toBottomOf="@+id/layout_time"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_paid_for_title"
                android:text="Paid For"
                android:minWidth="100dp"
                android:layout_gravity="center_vertical"
                style="@style/TextViewTitle"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"></TextView>

            <EditText
                android:id="@+id/edit_text_paid_for"
                android:padding="10dp"
                android:minWidth="100dp"
                app:layout_constraintTop_toTopOf="parent"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:background="@drawable/edit_text_black_border"
                app:layout_constraintStart_toEndOf="@+id/text_view_paid_for_title"
                app:layout_constraintEnd_toStartOf="@+id/image_view_paid_for"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"></EditText>


            <ImageView
                app:layout_constraintTop_toTopOf="@+id/text_view_paid_for"

                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/image_view_paid_for"
                android:layout_marginEnd="40dp"
                android:visibility="invisible"

                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

       <Button
           app:layout_constraintTop_toBottomOf="@+id/layout_paid_for"
           app:layout_constraintStart_toStartOf="parent"
           android:id="@+id/button_create"
           android:layout_marginTop="15dp"
           android:textColor="@color/black"
           android:background="@drawable/button_bg_black"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Save" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>
</layout>