<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        app:behavior_hideable="false"
        android:minHeight="100dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            app:layout_constraintBottom_toBottomOf="@+id/text_view_update_account"
            app:layout_constraintTop_toTopOf="@+id/text_view_update_account"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/image_view_update_account"
            android:layout_marginStart="15dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:src="@drawable/ic_home_black_24dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/text_view_update_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Update Name"
            android:includeFontPadding="false"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_view_update_account"
            app:layout_constraintEnd_toEndOf="parent"></TextView>

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/text_view_update_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
           app:layout_constraintTop_toTopOf="@+id/text_view_remove_account"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_remove_account"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/image_view_delete_account"
            android:layout_marginStart="15dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"

            android:src="@drawable/ic_home_black_24dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_view_remove_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:textSize="18dp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/image_view_delete_account"
            app:layout_constraintEnd_toEndOf="parent"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>