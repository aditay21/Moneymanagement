<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="30dp"
    app:cardBackgroundColor="@color/color_0b30e1"
    app:cardCornerRadius="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_account_name_title"
        android:text="Account Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        style="@style/TextViewTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/text_view_account_name_value"
        android:text=""
        android:textColor="@color/color_afc8ea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        app:layout_constraintTop_toBottomOf="@+id/text_view_account_name_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>




    <TextView
        android:id="@+id/text_view_account_balance_title"
        android:text="Balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewTitle"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/text_view_account_name_value"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"


        />

        <TextView
        android:id="@+id/text_view_account_balance_value"
        android:text=""
        android:textColor="@color/color_afc8ea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        app:layout_constraintTop_toBottomOf="@+id/text_view_account_balance_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />


        <TextView
            android:id="@+id/text_view_account_created_date"
            android:text="Created Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewNormal"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/text_view_account_balance_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />


        <TextView
            android:id="@+id/text_view_account_created_date_value"
            android:text="21/01/23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewNormal"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/text_view_account_created_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>