<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
     android:id="@+id/constraintLayout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/bg_app"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <View
            android:layout_width="0dp"
            android:background="@color/color_0c0d16"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_next"
            android:layout_height="0dp">
        </View>



        <ImageView
            android:id="@+id/image_view_previous"
            android:layout_width="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_current_date_year_selection"
            android:src="@drawable/previous"
            android:layout_height="wrap_content">
        </ImageView>

        <TextView
            android:id="@+id/text_view_current_date_year_selection"
            android:layout_height="wrap_content"
            android:text="20 jan / 2023"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content" />

        <ImageView
            android:id="@+id/image_view_next"
            android:layout_width="wrap_content"
            android:src="@drawable/next"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toEndOf="@+id/text_view_current_date_year_selection"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content">
        </ImageView>



        <com.google.android.material.tabs.TabLayout
            app:layout_constraintTop_toBottomOf="@+id/image_view_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tabMode="fixed"
            app:tabTextColor="@color/white"
            android:background="@color/color_0c0d16"
            app:tabBackground="@color/color_0c0d16"
            android:id="@+id/tab_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_total_expense"
            android:text="Expense"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tab_layout"/>

        <TextView
            android:id="@+id/text_view_total_income"
            android:text="Expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_view_total_expense"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
