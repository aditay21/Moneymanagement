<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
     android:id="@+id/constraintLayout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/bg_app"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <View
            android:layout_width="0dp"
            android:background="@color/color_0c0d16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_next"
            android:layout_height="0dp">
        </View>



        <ImageView
            android:id="@+id/image_view_previous"
            android:layout_width="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_current_date_year_selection"
            android:src="@drawable/previous"
            android:layout_height="wrap_content">
        </ImageView>

        <TextView
            android:id="@+id/text_view_current_date_year_selection"
            android:layout_height="wrap_content"
            android:text="20 jan / 2023"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content" />

        <ImageView
            android:id="@+id/image_view_next"
            android:layout_width="wrap_content"
            android:src="@drawable/next"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toEndOf="@+id/text_view_current_date_year_selection"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content">
        </ImageView>

        <ImageView
            android:id="@+id/image_view_filtter"
            android:layout_width="wrap_content"
            android:src="@drawable/filter"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content">
        </ImageView>
        <ImageView
            android:id="@+id/image_view_filter_applied"
            android:layout_width="wrap_content"
            android:src="@drawable/checked"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content">
        </ImageView>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view"
            app:layout_constraintTop_toBottomOf="@+id/image_view_next"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </androidx.recyclerview.widget.RecyclerView>








</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
